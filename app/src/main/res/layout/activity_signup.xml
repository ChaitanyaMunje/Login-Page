<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".signup">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
                >
        <RelativeLayout
            android:layout_width="match_parent"
            android:background="@drawable/background"
            android:id="@+id/relative"
            android:elevation="20dp"
            android:layout_height="wrap_content"
            >

                <ImageView
                    android:layout_width="100dp"
                    android:id="@+id/logo"
                    android:layout_height="100dp"
                    android:src="@drawable/ic_adb_black_24dp"
                    android:layout_margin="40dp"
                    android:padding="0dp"
                    android:layout_centerHorizontal="true"
                    />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Sign Up"
                    android:textColor="@android:color/white"
                    android:textSize="20dp"
                    android:textAlignment="textEnd"
                    android:layout_marginBottom="40dp"
                    android:layout_marginRight="50dp"
                    android:layout_below="@id/logo"/>

        </RelativeLayout>

        <Button
            android:id="@+id/btnsignup"
            android:layout_width="match_parent"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:layout_centerInParent="true"
            android:layout_height="wrap_content"
            android:layout_below="@+id/confpassedt"
            android:layout_marginTop="50dp"
            android:textColor="@android:color/white"
            android:background="@drawable/circlebutton"
            android:text="Sign UP" />

        <EditText
            android:id="@+id/emailedt"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:hint="Email"
            android:elevation="20dp"
            android:drawableLeft="@drawable/ic_email_black_24dp"

            android:layout_marginTop="40dp"
            android:layout_below="@id/relative"
            android:background="@drawable/emailbuttoncircle"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:inputType="textEmailAddress" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_below="@id/emailedt"
            android:id="@+id/phno"

            android:layout_marginTop="30dp"
            android:background="@drawable/emailbuttoncircle"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:maxLength="10"
            android:elevation="20dp"
            android:drawableLeft="@drawable/ic_local_phone_black_24dp"
            android:inputType="phone"
            android:hint="Phone Number"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:background="@drawable/emailbuttoncircle"
            android:layout_marginTop="30dp"
            android:id="@+id/passwordedt"
            android:elevation="20dp"
                android:drawableLeft="@drawable/ic_vpn_key_black_24dp"
            android:inputType="textPassword"
            android:layout_below="@+id/phno"
            android:hint="Password"

            />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_below="@+id/passwordedt"
            android:id="@+id/confpassedt"
            android:layout_marginTop="30dp"
            android:background="@drawable/emailbuttoncircle"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:elevation="20dp"
            android:drawableLeft="@drawable/ic_vpn_key_black_24dp"

            android:inputType="textPassword"
            android:hint="Confirm Password"/>

        <Button
            android:layout_width="match_parent"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:layout_height="wrap_content"
            android:text="Already Register Login Here"
            android:background="@drawable/circlebutton"
            android:layout_below="@id/btnsignup"
            android:layout_centerHorizontal="true"
            android:textColor="@android:color/white"
            android:layout_marginBottom="30dp"
            android:layout_marginTop="20dp"
            android:id="@+id/btnlogin"
            />

    <ProgressBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:id="@+id/progress"
        android:visibility="gone"
        android:layout_below="@id/confpassedt"
        />





</RelativeLayout>

</ScrollView>